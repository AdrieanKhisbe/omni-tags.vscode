{
    "name": "omni-tags",
    "displayName": "Omni Tags",
    "description": "Omni §Tags for VSCode",
    "preview": true,
    "version": "0.5.2",
    "publisher": "adrieankhisbe",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/AdrieanKhisbe/omni-tags.vscode"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/omni-tags",
    "contributes": {
        "commands": [
            {
                "command": "omni-tags.navigate.gotoNextTag",
                "title": "Omni-Tags: Go to next §tag"
            },
            {
                "command": "omni-tags.navigate.gotoPreviousTag",
                "title": "Omni-Tags: Go to previous §tag"
            },
            {
                "command": "omni-tags.editing.insertSecondarySymbol",
                "title": "Omni-Tags: Insert the secondary tag symbol"
            },
            {
                "command": "omni-tags.editing.insertTertiarySymbol",
                "title": "Omni-Tags: Insert the tertiary tag symbol"
            },
            {
                "command": "omni-tags.fileTree.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "omni-tags.fileTree",
                    "name": "Omni Tags File Outline"
                }
            ]
        },
        "grammars": [
            {
                "injectTo": [
                    "text",
                    "source"
                ],
                "scopeName": "inline.omni-tags",
                "path": "./syntaxes/omni-tags.json"
            }
        ],
        "keybindings": [
            {
                "command": "omni-tags.editing.insertSecondarySymbol",
                "key": "ctrl+k ctrl+6",
                "mac": "cmd+k cmd+6",
                "when": "editorTextFocus"
            },
            {
                "command": "omni-tags.editing.insertTertiarySymbol",
                "key": "ctrl+k 6",
                "mac": "cmd+k 6",
                "when": "editorTextFocus"
            },
            {
                "command": "omni-tags.navigate.gotoNextTag",
                "key": "alt+6",
                "mac": "alt+6",
                "when": "editorTextFocus"
            },
            {
                "command": "omni-tags.navigate.gotoPreviousTag",
                "key": "shift+alt+6",
                "mac": "shift+alt+6",
                "when": "editorTextFocus"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "omni-tags.fileTree.refresh",
                    "when": "view == omni-tags.fileTree",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "pretest": "tsc -p ./",
        "lint": "eslint . --ext .ts",
        "test:unit": "node ./out/test",
        "test": "npm run lint && npm run test:unit"
    },
    "devDependencies": {
        "@-k/eslint-plugin": "^0.4.1",
        "@types/chai": "^4.2.13",
        "@types/glob": "^7.1.3",
        "@types/lodash": "^4.14.161",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.5",
        "@types/vscode": "^1.49.0",
        "@types/webpack": "^4.41.22",
        "@typescript-eslint/eslint-plugin": "^4.4.0",
        "@typescript-eslint/parser": "^4.4.0",
        "chai": "^4.2.0",
        "eslint": "^7.10.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "ts-loader": "^8.0.4",
        "ts-node": "^9.0.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.3",
        "vscode-test": "^1.4.0",
        "webpack": "^4.44.2",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "lodash": "^4.17.20"
    }
}
